<script>
/* MATRIX */
const canvas = document.getElementById("matrix");
const ctx = canvas.getContext("2d");

canvas.height = window.innerHeight;
canvas.width = window.innerWidth;

let letters = "01ABCDEFGHIJKLMNOPQRSTUVWXYZ";
letters = letters.split("");

let fontSize = 14;
let columns = canvas.width / fontSize;
let drops = [];

for (let i = 0; i < columns; i++) drops[i] = 1;

function draw() {
  ctx.fillStyle = "rgba(0,0,0,0.15)";
  ctx.fillRect(0, 0, canvas.width, canvas.height);

  ctx.fillStyle = "#00ff00";
  ctx.font = fontSize + "px monospace";

  for (let i = 0; i < drops.length; i++) {
    let text = letters[Math.floor(Math.random() * letters.length)];
    ctx.fillText(text, i * fontSize, drops[i] * fontSize);

    if (drops[i] * fontSize > canvas.height && Math.random() > 0.975)
      drops[i] = 0;

    drops[i]++;
  }
}
setInterval(draw, 40);

/* TIMER */
let sec = 0;
setInterval(() => {
  sec++;
  let m = String(Math.floor(sec / 60)).padStart(2, '0');
  let s = String(sec % 60).padStart(2, '0');
  document.getElementById("timer").innerText = "Time: " + m + ":" + s;
}, 1000);

/* TYPE */
function typeText(text, speed = 25) {
  return new Promise(resolve => {
    let i = 0;
    const terminal = document.getElementById("terminal");
    const sound = document.getElementById("typeSound");

    function typing() {
      if (i < text.length) {
        terminal.innerHTML += text.charAt(i);
        sound.currentTime = 0;
        sound.play();
        i++;
        setTimeout(typing, speed);
      } else {
        terminal.innerHTML += "\n";
        resolve();
      }
    }
    typing();
  });
}

/* MAIN */
async function startHack() {
  document.getElementById("start").style.display = "none";
  const terminal = document.getElementById("terminal");
  terminal.style.display = "block";

  await typeText("Initializing breach...");
  await typeText("Bypassing firewall...");
  await typeText("Access granted...");

  document.body.classList.add("alert");
  document.getElementById("alertSound").play();

  await typeText("\n‚ö†Ô∏è WARNING!");
  await typeText("Device compromised!");

  document.body.classList.add("shake");
  navigator.vibrate?.(500);

  await typeText("Extracting data...");
  await typeText("Photos ‚úî Contacts ‚úî Files ‚úî");

  document.getElementById("camera").style.display = "block";

  await typeText("\nüì∏ Camera access enabled...");
  await typeText("Recording user...");

  await typeText("\nüí≥ Bank data scanning...");
  await typeText("Access complete ‚úî");

  await typeText("\n‚úî ACCESS GRANTED");
  await typeText("‚úî DONE");

  setTimeout(() => {
    terminal.innerHTML += "\n\nüòÇ PRANK SUCCESSFUL!\nRelax... kuch hack nahi hua üòè";
    document.getElementById("camera").style.display = "none";
    document.body.classList.remove("alert");
  }, 9000);
}
